{% extends '_layout.html.twig' %}
{% block title %}Connexion{% endblock %}
 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('login') }}
 {% endblock %}
{% block body %}
    <section class="page-content">
        <div class="row text-center justify-content-center">
            <h1 class="h3 mb-5 font-weight-normal mt-5">Mon espace personnel</h1>
        </div>
        <div class="row justify-content-center mb-5">
            <div class="wrapper fadeInDown">
                <div id="formContent">
                    <!-- Login Form -->
                    <form id="login" method="post">
                        <label for="login">Email</label>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-secondary"><i
                                            class="fas fa-user text-light"></i></span>
                            </div>
                            <input value="{{ last_username }}" name="email" id="email"
                                   class="form-control" required
                                   placeholder="Dupont@gmail.com" autofocus>
                        </div>
                        <label for="inputPassword" class="mt-2">Mot de passe</label>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-secondary"><i class="fas fa-key text-light"></i></span>
                            </div>
                            <input type="password" name="password" id="inputPassword" placeholder="Mot de passe"
                                   class="form-control" required>
                        </div>
                        <button class="btn btn-lg btn-dark text-color-button mt-3 mb-3" type="submit">
                            Connexion
                        </button>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">
                    </form>
                    <button class="btn btn-lg btn-primary order-0" type="submit" form="login">Se connecter</button>
                </div>
                {% if emailUsed is defined and emailUsed == true %}
                
                {% else %}
                <div class="modal-footer d-flex flex-row justify-content-between">
                    <p>Vous n'avez pas encore de compte ?</p>
                    <a class="btn btn-lg btn-outline-primary order-1" href="{{ path('user_register') }}">S'inscrire</a>
                    <a href="{{ path('app_forgot_password_request') }}">mot de passe oubli√© ?</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
