{% extends '_layout.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <section class="page-content container-fluid col-10 col-lg-10 pb-4">
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <h1>Modifier mon profil</h1>
        <div>
            {{ form_start(form) }}

            {{ form_widget(form) }}

            <button class="btn btn-primary mb-3 offset-lg-11 offset-sm-10">{{ button_label|default('Valider') }}</button>
            {{ form_end(form) }}
        </div>
        <a class="btn btn-primary" href="{{path('dashboard_profile_edit_user')}}">modifier mot de passe</a>
    </section>

{% endblock %}
{% block footer %}

{% endblock %}
