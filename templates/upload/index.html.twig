{% extends '_layout.html.twig' %}

{% block title %}Mes status{% endblock %}

{% block body %}
    <section class="page-content container-fluid col-10 col-lg-10 pb-4">
        <h2>Mes statuts</h2>

        <table class="table">
            <thead>
            <tr>
                <th>Statuts</th>
            </tr>
            </thead>
            <tbody>
            {% for upload in uploads %}
                <tr>
                    <td>{{ upload.status }}</td>
                    <td>
                        {{ include('upload/_delete_form.html.twig') }}
                    </td>
                    <td>
                        <a class="btn btn-primary" href="/uploads/status/{{ upload.status }}" target="_blank">Voir</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">pas de document trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('upload_new') }}">Téléverser un document</a>
    </section>
{% endblock %}
