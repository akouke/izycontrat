{% extends '_layout.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <section class="page-content justify-content-center align-items-center container-fluid col-10 col-lg-10 pb-4">
        <h1>Inscription</h1>
        <div class="registerUser row row-cols-1 justify-content-center w-100 row-cols-md-2 row-cols-xl-3">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
            {{ form_row(registrationForm.phoneNumber) }}
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.country) }}
            {{ form_row(registrationForm.user.email) }}
            {{ form_row(registrationForm.user.password) }}
            {{ form_row(registrationForm.user.agreeTerms)|replace({'#CGU#': '<a class="text-secondary" href="">Conditions Générales de Ventes et d’Utilisation</a>'})|raw }}
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary ">Valider l'inscription</button>
            </div>

            {{ form_end(registrationForm) }}

        </div>
    </section>
{% endblock %}

